<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.MyApplication" parent="Theme.Material3.DayNight">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.MyApplication" parent="Base.Theme.MyApplication" />


    <style name="PinButton" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@drawable/bg_btn_text_color</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:background">@drawable/btn_shape_background</item>
    </style>

    <style name="PinButtonOk" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@drawable/bg_btn_text_color</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:background">@drawable/btn_ok_bagraund</item>
    </style>

    <style name="LongButton" parent="PinButton">
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
    </style>

    <style name="LongButtonSecond" parent="PinButton">
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:layout_marginTop">20dp</item>
    </style>

    <style name="TextView" parent="Widget.AppCompat.TextView">
        <item name="android:layout_marginStart">@dimen/_20dp</item>
        <item name="android:layout_marginEnd">@dimen/_20dp</item>
        <item name="android:layout_marginTop">@dimen/_20dp</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="TextViewHeader" parent="Widget.AppCompat.TextView">
        <item name="android:layout_marginStart">@dimen/_20dp</item>
        <item name="android:layout_marginEnd">@dimen/_20dp</item>
        <item name="android:layout_marginTop">@dimen/_20dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center_horizontal</item>
    </style>
</resources>